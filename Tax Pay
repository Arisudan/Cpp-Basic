#include<bits/stdc++.h>
using namespace std;
int main(){
    long int salary;
    cout<<"Enter your salary: ";
    cin>>salary;
    if(salary<=150000){
        cout<<"No Tax"<<endl;
    }
    else if(salary>=150001&&salary<=300000){
        cout<<"You have to pay "<<salary*0.1 <<" as tax"<<endl;
    }
    else if(salary>=300001&&salary<=500000){
        cout<<"You have to pay "<<salary*0.2 <<" as tax"<<endl;
    }
    else if(salary>500001){
        cout<<"You have to pay "<<salary*0.3 <<" as tax"<<endl;
    }
    
}
